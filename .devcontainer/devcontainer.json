{
	"name": "Study to Activity Dev",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"forwardPorts": [
		8000,
		3000
	],
	"postCreateCommand": "pip install -r backend/requirements.txt && cd frontend && npm install",
	"postStartCommand": "uvicorn backend.main:app --host 0.0.0.0 --port 8000 --reload &",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"esbenp.prettier-vscode"
			]
		}
	},
	"remoteUser": "vscode"
}
